{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@vqp/core": ["packages/core/src/index.ts"],
      "@vqp/data-filesystem": ["packages/data-filesystem/src/index.ts"],
      "@vqp/data-encrypted": ["packages/data-encrypted/src/index.ts"],
      "@vqp/crypto-software": ["packages/crypto-software/src/index.ts"],
      "@vqp/crypto-snarkjs": ["packages/crypto-snarkjs/src/index.ts"],
      "@vqp/audit-console": ["packages/audit-console/src/index.ts"],
      "@vqp/audit-file": ["packages/audit-file/src/index.ts"],
      "@vqp/audit-memory": ["packages/audit-memory/src/index.ts"],
      "@vqp/evaluation-jsonlogic": ["packages/evaluation-jsonlogic/src/index.ts"],
      "@vqp/vocab-http": ["packages/vocab-http/src/index.ts"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "examples",
    "tools",
    "**/*.test.ts",
    "**/*.spec.ts",
    "coverage",
    "circuits"
  ]
}
