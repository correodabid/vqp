{
  "name": "@vqp/core",
  "version": "0.0.3",
  "description": "Verifiable Query Protocol - Privacy-preserving, verifiable queries over private data with cryptographically verifiable responses",
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto.js",
      "types": "./dist/crypto.d.ts"
    },
    "./data": {
      "import": "./dist/data.js",
      "types": "./dist/data.d.ts"
    }
  },
  "files": [
    "dist/lib",
    "dist/crypto.js",
    "dist/crypto.d.ts",
    "dist/data.js",
    "dist/data.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && node esbuild.config.js",
    "build:dev": "npm run clean && node esbuild.config.js --watch",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "clean": "rm -rf dist",
    "test": "node --test --import tsx $(find tests -name '*.test.ts')",
    "test:unit": "node --test --import tsx $(find tests/unit -name '*.test.ts')",
    "test:integration": "node --test --import tsx $(find tests/integration -name '*.test.ts')",
    "test:watch": "node --test --watch --import tsx $(find tests -name '*.test.ts')",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov node --test --import tsx $(find tests -name '*.test.ts')",
    "lint": "eslint 'lib/**/*.ts' 'tests/**/*.ts' 'tools/**/*.ts'",
    "lint:fix": "eslint 'lib/**/*.ts' 'tests/**/*.ts' 'tools/**/*.ts' --fix",
    "format": "prettier --write 'lib/**/*.ts' 'tests/**/*.ts' 'tools/**/*.ts'",
    "format:check": "prettier --check 'lib/**/*.ts' 'tests/**/*.ts' 'tools/**/*.ts'",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "prepare": "husky install || true",
    "docs:build": "typedoc --out docs/api lib/index.ts",
    "docs:serve": "npx http-server docs/api -p 8080",
    "examples:basic": "npm run build:examples && node dist/examples/basic-example.js",
    "examples:zk": "npm run build:examples && node dist/examples/zk-proof-example.js",
    "examples:complete": "npm run build:examples && node dist/examples/complete-example.js",
    "build:examples": "esbuild examples/*.ts --outdir=dist/examples --bundle --platform=node --target=node18 --format=esm --external:@vqp/core",
    "cli": "npm run build && node dist/tools/cli.js",
    "benchmark": "esbuild tools/benchmark.ts --outfile=dist/tools/benchmark.js --bundle --platform=node --target=node18 --format=esm && node dist/tools/benchmark.js",
    "release": "npm run prepublishOnly && npm publish",
    "release:beta": "npm run prepublishOnly && npm publish --tag beta"
  },
  "keywords": [
    "privacy-preserving",
    "verification",
    "cryptography",
    "zero-knowledge",
    "protocol",
    "hexagonal-architecture",
    "data-sovereignty",
    "verifiable-queries",
    "privacy",
    "decentralized",
    "trust",
    "compliance",
    "identity-verification",
    "financial-verification"
  ],
  "author": "VQP Contributors <hello@vqp-protocol.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/correodabid/vqp.git"
  },
  "bugs": {
    "url": "https://github.com/correodabid/vqp/issues"
  },
  "homepage": "https://vqp-protocol.org",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/vqp-protocol"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "@types/ws": "^8.18.1",
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^4.21.2",
    "jose": "^5.10.0",
    "ora": "^8.2.0",
    "snarkjs": "^0.7.5",
    "uuid": "^9.0.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "c8": "^9.1.0",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "tsx": "^4.20.2",
    "typedoc": "^0.26.11",
    "typedoc-plugin-extras": "^3.1.0",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
