{
  "name": "@vqp/protocol",
  "version": "1.0.0",
  "description": "Verifiable Query Protocol - Privacy-preserving, verifiable queries over private data",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vqp": "./tools/vqp"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test --import tsx tests/unit/adapters/crypto/crypto-adapter.test.ts tests/unit/adapters/transport/websocket-adapter.test.ts tests/unit/adapters/encrypted-data-adapter.test.ts tests/unit/adapters/audit/memory-adapter.test.ts tests/unit/adapters/audit/file-adapter.test.ts tests/unit/domain/types.test.ts tests/unit/domain/vqp-service.test.ts tests/integration/vqp-system.test.ts tests/integration/e2e-flow.test.ts tests/integration/comprehensive-flow.test.ts",
    "test:new": "find tests -name '*.test.js' -exec node {} \\;",
    "test:watch": "node --test --watch --import tsx tests/unit/**/*.test.ts tests/integration/**/*.test.ts",
    "test:coverage": "c8 node --test --import tsx tests/unit/**/*.test.ts tests/integration/**/*.test.ts",
    "lint": "eslint 'lib/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'lib/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'lib/**/*.ts' 'tests/**/*.ts'",
    "prepare": "npm run build",
    "docs:build": "typedoc",
    "start": "npm run build && cp -r vendor dist/ && node dist/examples/basic-example.js",
    "cli": "npx tsx tools/cli.ts",
    "examples": "npm run start"
  },
  "keywords": [
    "privacy",
    "verification",
    "cryptography",
    "zero-knowledge",
    "protocol",
    "hexagonal-architecture"
  ],
  "author": "VQP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vqp-protocol/vqp.git"
  },
  "dependencies": {
    "@noble/ed25519": "^2.3.0",
    "@types/ws": "^8.18.1",
    "ajv": "^8.17.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^4.21.2",
    "jose": "^5.10.0",
    "ora": "^8.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "c8": "^9.1.0",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.2",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
