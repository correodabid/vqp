{
  "name": "@vqp/protocol",
  "version": "1.0.0",
  "description": "Verifiable Query Protocol - Privacy-preserving, verifiable queries over private data",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vqp": "./tools/vqp"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test --import tsx tests/**/*.test.ts",
    "test:watch": "node --test --watch --import tsx tests/**/*.test.ts",
    "test:coverage": "c8 node --test --import tsx tests/**/*.test.ts",
    "lint": "eslint 'lib/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'lib/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'lib/**/*.ts' 'tests/**/*.ts'",
    "prepare": "npm run build",
    "docs:build": "typedoc",
    "start": "npm run build && cp -r vendor dist/ && node dist/examples/basic-example.js",
    "cli": "npx tsx tools/cli.ts",
    "examples": "npm run start"
  },
  "keywords": [
    "privacy",
    "verification",
    "cryptography",
    "zero-knowledge",
    "protocol",
    "hexagonal-architecture"
  ],
  "author": "VQP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vqp-protocol/vqp.git"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@types/ws": "^8.18.1",
    "ajv": "^8.12.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "express": "^4.18.2",
    "jose": "^5.2.0",
    "ora": "^8.2.0",
    "uuid": "^9.0.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "c8": "^9.1.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.20.1",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
