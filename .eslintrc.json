{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "Buffer": "readonly",
    "process": "readonly",
    "console": "readonly",
    "setTimeout": "readonly",
    "clearTimeout": "readonly",
    "setInterval": "readonly",
    "clearInterval": "readonly",
    "NodeJS": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-case-declarations": "error",
    "no-prototype-builtins": "error"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "vendor/**/*",
    "*.js",
    "*.d.ts"
  ]
}
